# =============================================================================
# Monty - Realtime Agentic AI Platform
# Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=monty
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# Monty Agent (claude, amp, or cursor)
MONTY_AGENT=claude

# =============================================================================
# POSTGRESQL + PGVECTOR
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=monty
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/monty

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# NEO4J + GRAPHITI
# =============================================================================
NEO4J_HOST=neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_URI=bolt://neo4j:7687

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Redis settings
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# AI / LLM PROVIDERS
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# OpenAI (Embeddings & GPT)
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_CHAT_MODEL=gpt-4o

# =============================================================================
# VOICE AI (Optional)
# =============================================================================

# ElevenLabs (Hosted Voice AI)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5
ELEVENLABS_WEBHOOK_SECRET=

# Chatterbox (Self-hosted TTS)
CHATTERBOX_URL=http://chatterbox:8001
CHATTERBOX_ENABLED=false

# =============================================================================
# WEB SEARCH (Optional)
# =============================================================================

# Tavily (Recommended for AI agents)
TAVILY_API_KEY=tvly-...

# Serper (Google Search API)
SERPER_API_KEY=

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# GitHub (for code tools)
GITHUB_TOKEN=ghp_...

# Slack (for notifications)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=xoxb-...

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry (Error tracking)
SENTRY_DSN=

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# SECURITY
# =============================================================================

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# JWT (if using auth)
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# =============================================================================
# DOCKER / INFRASTRUCTURE
# =============================================================================

# Container settings
COMPOSE_PROJECT_NAME=monty
DOCKER_BUILDKIT=1

# Nginx
NGINX_HOST=localhost
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=1
FASTAPI_RELOAD=true

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent defaults
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_STREAM_ENABLED=true

# Memory settings
MEMORY_VECTOR_WEIGHT=0.6
MEMORY_GRAPH_WEIGHT=0.4
MEMORY_TOP_K=10

# Session settings
SESSION_TIMEOUT_MINUTES=60
SESSION_MAX_MESSAGES=100
